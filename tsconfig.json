{
  "compilerOptions": {
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "target": "esnext",
    "baseUrl": "src",  // baseUrl을 src로 설정
    "paths": {
      "*": ["node_modules/*"],
      "@components/*": ["components/*"], // 예시 경로 별칭
      "@utils/*": ["utils/*"] // 예시 경로 별칭
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "src"
  ]
}
